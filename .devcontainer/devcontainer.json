// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
    "name": "python-try",

    // Use docker-compose for better development workflow
    "dockerComposeFile": "../docker-compose.yml",
    "service": "dev",
    "workspaceFolder": "/workspaces/python-try",

    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": [
        "./.devcontainer/postCreateCommand.sh"
    ],

    // Configure tool-specific properties.
    "customizations": {
        "vscode": {
            "extensions": ["ms-python.python", "editorconfig.editorconfig"],
            "settings": {
                "python.testing.pytestArgs": ["tests"],
                "python.testing.unittestEnabled": false,
                "python.testing.pytestEnabled": true,
                "python.defaultInterpreterPath": "/workspaces/python-try/.venv/bin/python",
                "python.testing.pytestPath": "/workspaces/python-try/.venv/bin/pytest"
            }
        }
    }
}
